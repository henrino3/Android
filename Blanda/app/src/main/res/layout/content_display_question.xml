<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_display_question" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/question"
        android:id="@+id/questionView"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:id="@+id/answerOneView"
        android:layout_below="@+id/questionView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:onClick="collectAnswer(3)"
        android:background="@color/colorPrimary"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:id="@+id/answerTwoView"
        android:layout_below="@+id/answerOneView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:onClick="collectAnswer(2)"
        android:background="@color/colorAccent"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:id="@+id/answerThreeView"
        android:layout_below="@+id/answerTwoView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:onClick="collectAnswer(3)"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
